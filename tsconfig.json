{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "esnext",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/esm",
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": ["src", "src/assets/tailwind.config.ts"],
  "exclude": ["node_modules", "dist"]
}
